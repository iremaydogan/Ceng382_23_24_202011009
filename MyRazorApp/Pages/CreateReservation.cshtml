@page
@model MyRazorApp.Pages.CreateReservationModel
@{
ViewData["Title"] = "Create Reservation";
Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="full-page-container d-flex justify-content-center align-items-center">
    <div class="card p-4">
        <h2 class="text-center">Create Reservation</h2>
        <form method="post">
            <div class="form-group">
                <label asp-for="Input.RoomId" class="text-info"></label>
                <select asp-for="Input.RoomId" class="form-control" asp-items="Model.RoomList"></select>
                <span asp-validation-for="Input.RoomId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.StartDate" class="text-info"></label>
                <input asp-for="Input.StartDate" class="form-control" type="date" />
                <span asp-validation-for="Input.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.EndDate" class="text-info"></label>
                <input asp-for="Input.EndDate" class="form-control" type="date" />
                <span asp-validation-for="Input.EndDate" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary mt-3">Create</button>
        </form>
    </div>
</div>

<style>
    body {
        background-color: rgba(255, 205, 205, 0.9);
    }

    .full-page-container {
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .card {
        background-color: #ffe0e0;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        width: 80%;
    }

    .text-info {
        color: #ff5733;
    }

    .btn-primary {
        background-color: #ff5733;
        border-color: #ff5733;
    }
</style>